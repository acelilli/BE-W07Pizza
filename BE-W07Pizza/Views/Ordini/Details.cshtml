@model BE_W07Pizza.Models.Ordini

@{
    ViewBag.Title = "Carrello";
}

<h2>Carrello</h2>

<div>
    <h4>Il tuo ordine</h4>
    <hr />
    <div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">I tuoi dati:</h2>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Nome)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Cognome)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Cognome)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Indirizzo)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Indirizzo)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Note)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Note)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.ConfermaOrdine)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ConfermaOrdine)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Evaso)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Evaso)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-right">
                    <a href="@Url.Action("Edit", "Ordini", new { id = Model.IDOrdine })" class="btn btn-primary">Modifica I tuoi dati e Conferma l'ordine</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">I tuoi acquisti:</h2>
                    <hr />
                    <ul class="list-group">
                        @foreach (var dettaglio in Model.DettagliOrdine)
                        {
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6>Quantità: @dettaglio.Quantita</h6>
                                    </div>
                                    <div class="col-md-6">
                                        <h6>Articolo: @dettaglio.Articoli.NomeArticolo</h6>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
    </div>
